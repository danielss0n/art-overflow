<div class="form-area">
    <form action="/users/register" method="post">
    {{#if messages.message}}
        <div class="message">
            <i class="bi bi-info-circle fa-4x" ></i>
            {{messages.message}}
        </div>  
    {{/if}}
        <h1>Registro:</h1>
    <div class="email-area">
        <label for="name">Digite seu Nome:</label><br>
        <input type="text" name="name" placeholder="Seu nome..." autocomplete="off">
    </div>
    <div class="email-area">
        <label for="email">Digite seu Email:</label><br>
        <input type="text" name="email" placeholder="Seu Email..." autocomplete="off">
    </div>
    <div class="password-area">
        <label for="password">Digite sua senha:</label><br>
        <input type="password" name="password" placeholder="Sua senha..."><br>
        <label for="passwordConfirm">Confirme a senha:</label><br>
        <input type="password" name="passwordConfirm" placeholder="Confirme sua senha..."><br>
    </div>
        <input type="submit" value="Cadastrar">
        <a href="/">Homepage</a>
        <a href="/auth/login">Já está cadastrado?</a>
    </form>    
</div>
