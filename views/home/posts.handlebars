<div class="body-posts">

        {{#each posts}}
            
            <div class="post">
                <div class="user-container">
                    <img src="" class="user-img">
                    <a href="/users/{{this.User.name}}" class="user-name">{{this.User.name}}</a>
                    <p class="user-level">{{this.User.skill}}</p>
                </div>
                <img class="post-img" src='images/posts/{{this.image}}'>
                <div class="description-post-container">
                    <a href="/posts/{{this.title}}"><h1 class="post-title">{{this.title}}</h1></a>
                    
                    <p class="post-description">{{this.description}}</p>
                </div>
            </div>
        {{/each}}

</div>
